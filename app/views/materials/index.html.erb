<h1>New Price Point Report</h1>

<h2>Select Materials</h2>
<table id="materials_table">
  <thead>
    <tr>
     <th>Name</th>
     <th>Type</th>
     <th>Skill(s)</th>
     <th>Grade</th>
     <th>Add Price Point</th>
    </tr>
  </thead>

  <tbody>
    <% @materials.reject {|m| m.name.blank? }.each do |material| 
        mt = material.material_type
        skill = mt.skills.first  
        ppid = "pp_#{material.id}" %>
      <tr>
        <td><%= link_to material.name, material_path(material) %></td>
        <td><%= link_to mt.name, material_type_path(mt) %></td>
        <td><%= skill ?  link_to(skill.name, skill_path(skill)) : 'N/A' %></td>
        <td><%= material.grade %></td>
        <td><nobr><input type="checkbox">
            <span class="price_point"><input type="text" size="8" id="<%= ppid %>" name="<%= ppid %>"></span></nobr></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="enter_prices">
<h2>Enter Prices</h2>
<table id="entry_table" width="100%">
  <thead>
    <tr>
     <th>Name</th>
     <th>Type</th>
     <th>Skill(s)</th>
     <th>Grade</th>
     <th>Add Price Point</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
</div>
